-- set envs
nyagos.env.GOROOT = "C:\\msys64\\mingw64\\lib\\go"
nyagos.env.GOPATH = nyagos.env.HOME .. "\\go"
nyagos.env.GOBIN = nyagos.env.GOPATH .. "\\bin"

-- add pathes
addpath "C:\\app\\OpenSSH-Win64"

-- set aliases
alias {
    ll = "ls -la $*",
    rm = "del $*",
    mv = "move $*",
}

nyagos.env.prompt=nyagos.getenv('USERNAME') .. '@' .. nyagos.getenv('COMPUTERNAME') .. ' \u{e0b1} $P '
share.org_prompter=nyagos.prompt

nyagos.alias["."] = nyagos.alias.start

nyagos.prompt = function(this)
    local prompt_message = this

    local git_branch_name = nyagos.eval('git rev-parse --abbrev-ref HEAD 2>nul')
    if (git_branch_name ~= '') then
        prompt_message = prompt_message .. '\u{e0b1} \u{e0a0}' .. git_branch_name .. ' '
    end

    return share.org_prompter('$e[30;44;1m'..prompt_message..'$e[34;40;1m\u{e0b0}$_$$$s'..'$e[0m')
end

