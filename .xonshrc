from prompt_toolkit.keys import Keys
# XONSH WIZARD START
xontrib load coreutils free_cwd fzf-widgets
# xontrib load coreutils free_cwd powerline
# XONSH WIZARD END

$XDG_CONFIG_HOME = $HOME+'/.config'
$XDG_CACHE_HOME = $HOME+'/.cache'
$XDG_DATA_HOME = $HOME+'/.local/share'
$GOPATH = $HOME+'/go'
$GOBIN = $HOME+'/go/bin'
$PATH.append($GOBIN)
$PATH.append($HOME+'/.fzf/bin')
$PATH.append($HOME+'/.skim/bin')
$FZF_DEFAULT_COMMAND='ag --follow --nocolor --nogroup --hidden -g ""'
$FZF_DEFAULT_OPTS='--reverse --ansi --select-1 --exit-0'

$VI_MODE = True

$WIN_UNICODE_CONSOLE = True

$AUTO_CD = True

$PATHEXT = [".COM", ".EXE", ".BAT", ".CMD", ".VBS", ".VBE", ".JS", ".JSE", ".WSF", ".WSH", ".MSC"]

$PROMPT = "{INTENSE_GREEN}{cwd} {curr_branch} {prompt_end} "

$RIGHT_PROMPT = "{INTENSE_BLUE}{user}@{hostname} "

$DYNAMIC_CWD_WIDTH = "30%"
$XONSH_SHOW_TRACEBACK = True
$fzf_history_binding = Keys.ControlR
$fzf_ssh_binding = Keys.ControlS

aliases["ls"] = 'ls -F --color=auto --show-control-chars --ignore={NTUSER.*,ntuser.*}'

